# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/ticketing_system?schema=public"

# ==============================================
# JWT AUTHENTICATION (REQUIRED)
# ==============================================
# Secret key for JWT token signing
# **CRITICAL**: Use a strong random string in production
# Generate with: openssl rand -base64 32
# **WARNING**: Application will NOT start without this!
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Redis host for caching and distributed locks
REDIS_HOST="localhost"
# Redis port
REDIS_PORT="6379"
# Redis password (optional, leave empty if no auth)
REDIS_PASSWORD=""
# Redis database number (default: 0)
REDIS_DB="0"

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Application port
PORT="3000"
# Node environment (development | production | test)
NODE_ENV="development"

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Comma-separated list of allowed origins
# Development: http://localhost:5173
# Production: https://your-domain.com,https://www.your-domain.com
CORS_ORIGINS="http://localhost:5173"

# ==============================================
# RESERVATION SETTINGS
# ==============================================
# Reservation timeout in minutes (default: 10)
RESERVATION_TIMEOUT_MINUTES="10"
# Lock TTL in seconds for distributed locking (default: 30)
LOCK_TTL_SECONDS="30"

# ==============================================
# PAYMENT CONFIGURATION
# ==============================================
# Default payment provider (MOCK | STRIPE)
DEFAULT_PAYMENT_PROVIDER="MOCK"

# Stripe Configuration (uncomment if using Stripe)
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# Email service provider (MOCK | SENDGRID)
EMAIL_PROVIDER="MOCK"

# SendGrid Configuration (uncomment if using SendGrid)
# SENDGRID_API_KEY="SG...."
# SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
# SENDGRID_FROM_NAME="Ticketing System"

# ==============================================
# OPTIONAL SETTINGS
# ==============================================
# Prisma Studio Port (optional)
# PRISMA_STUDIO_PORT=5555

# ==============================================
# SECURITY CHECKLIST FOR PRODUCTION
# ==============================================
# ✓ 1. Generate a strong JWT_SECRET (32+ random characters)
# ✓ 2. Set JWT_SECRET as environment variable (never hardcode)
# ✓ 3. Use SSL/TLS for DATABASE_URL (sslmode=require)
# ✓ 4. Enable Redis authentication (set REDIS_PASSWORD)
# ✓ 5. Restrict CORS_ORIGINS to your actual domain(s)
# ✓ 6. Set NODE_ENV="production"
# ✓ 7. Use secure PostgreSQL credentials
# ✓ 8. Never commit .env files to version control
# ✓ 9. Rotate secrets regularly (quarterly recommended)
# ✓ 10. Enable rate limiting and DDoS protection

