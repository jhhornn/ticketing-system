{
  "name": "ticketing-system-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"./src/*\" dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "start": "pnpm --filter backend start",
    "start:prod": "pnpm --filter backend start:prod",
    "prisma:generate": "pnpm --filter backend prisma:generate",
    "prisma:migrate": "pnpm --filter backend prisma:migrate",
    "prisma:migrate:reset": "pnpm --filter backend prisma:migrate:reset",
    "prisma:studio": "pnpm --filter backend prisma:studio"
  },
  "devDependencies": {
    "pnpm": "^9.0.0"
  }
}